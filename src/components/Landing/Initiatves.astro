---

<section class="bg-gradient-to-tr from-prish-100">
  <div class="container px-5 py-24 mx-auto flex flex-wrap-reverse">
    <div
      class="lg:w-1/2 scale-75 w-full mb-10 lg:mb-0 rounded-lg overflow-hidden"
    >
      <img
        alt="feature"
        class="object-cover object-center h-full w-full"
        src="https://ouch-cdn2.icons8.com/xzoRmF5b33GA4M5brPLtpB47xKdlB_KkPlsLEOUradk/rs:fit:331:456/czM6Ly9pY29uczgu/b3VjaC1wcm9kLmFz/c2V0cy9wbmcvNTA4/LzdiM2VjODdhLWJh/ODQtNDc0NS04OTI5/LThkMjhjNDYwZDkx/NC5wbmc.png"
      />
    </div>
    <div
      class="flex flex-col flex-wrap lg:py-6 -mb-10 lg:w-1/2 lg:pl-12 lg:text-left text-center"
    >
      <!-- init card  -->
      {
        data.map((item) => (
          <div class="flex flex-col mb-10 lg:items-start items-center border-4 bg-prish-100/60 border-prish-200  rounded-2xl p-3">
            <div class="w-12 h-12 inline-flex items-center justify-center rounded-full bg-white shadow-lg text-prish-200 mb-5">
              <svg
                set:html={item.svg}
                fill="none"
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                class="w-6 h-6"
                viewBox="0 0 24 24"
              ></svg>
            </div>
            <div class="flex-grow">
              <h2 class="text-prish-200 text-2xl font-extrabold tracking-wider mb-3">
                {item.title}
              </h2>
              <p class="leading-relaxed text-base overflow-clip">
                {item.description}
              </p>
              <a
                href="#"
                aria-label="learn_more"
                class="mt-3 decoration-wavy hover:scale-110 transition-transform hover:underline hover:underline-offset-4 text-prish-300 inline-flex items-center"
              >
                Learn More
                <svg
                  fill="none"
                  stroke="currentColor"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  class="w-4 h-4 ml-2"
                  viewBox="0 0 24 24"
                >
                  <path d="M5 12h14M12 5l7 7-7 7" />
                </svg>
              </a>
            </div>
          </div>
        ))
      }
      <!-- init card end  -->
    </div>
  </div>
</section>
